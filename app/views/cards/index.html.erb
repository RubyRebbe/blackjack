<h1>Listing cards</h1>

<table>
  <tr>
    <th>Rank</th>
    <th>Suit</th>
    <th>User game</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.rank %></td>
    <td><%= card.suit %></td>
    <td><%= card.user_game %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

